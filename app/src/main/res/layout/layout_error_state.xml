<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">

    <!-- Error Icon -->
    <ImageView
        android:id="@+id/ivErrorIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_error"
        android:tint="@color/error_color"
        android:contentDescription="@string/error_occurred" />

    <!-- Error Title -->
    <TextView
        android:id="@+id/tvErrorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/error_occurred"
        android:textAppearance="@style/TextAppearance.Tams.Headline2"
        android:textColor="@color/text_primary"
        android:gravity="center" />

    <!-- Error Message -->
    <TextView
        android:id="@+id/tvErrorMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/error_message_generic"
        android:textAppearance="@style/TextAppearance.Tams.Body1"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:maxLines="4"
        android:ellipsize="end" />

    <!-- Retry Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRetry"
        style="@style/Widget.Tams.Button.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/retry"
        android:drawableStart="@drawable/ic_refresh"
        android:drawablePadding="8dp" />

    <!-- Secondary Action Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSecondaryAction"
        style="@style/Widget.Tams.Button.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/go_back"
        android:visibility="gone" />

</LinearLayout>
