<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme - Dark -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:colorBackground">@color/background_color</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:navigationBarColor">@color/background_color</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- Splash Theme - Dark -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="android:navigationBarColor">@color/primary_color</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- No Action Bar Theme - Dark -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Card View Style - Dark -->
    <style name="CardViewStyle">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Button Styles - Dark -->
    <style name="Widget.Tams.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@color/button_text_primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.Tams.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/button_secondary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Text Input Layout Style - Dark -->
    <style name="Widget.Tams.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/input_border_focused</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <!-- Text Appearance Styles - Dark -->
    <style name="TextAppearance.Tams.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextAppearance.Tams.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Tams.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Tams.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Bottom Navigation Style - Dark -->
    <style name="Widget.Tams.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/navigation_background</item>
        <item name="itemIconTint">@color/navigation_selected</item>
        <item name="itemTextColor">@color/navigation_selected</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Toolbar Style - Dark -->
    <style name="Widget.Tams.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/surface_color</item>
        <item name="titleTextColor">@color/text_primary</item>
        <item name="subtitleTextColor">@color/text_secondary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- FAB Style - Dark -->
    <style name="Widget.Tams.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/accent_color</item>
        <item name="tint">@android:color/white</item>
        <item name="elevation">6dp</item>
    </style>
</resources>
