# TAMS WALLET - DEVELOPMENT ENVIRONMENT CONFIGURATION
# ====================================================

# PROJECT INFORMATION
APP_NAME=TamsWallet
PACKAGE_NAME=com.tamswallet.app
VERSION_CODE=1
VERSION_NAME=1.0

# ANDROID BUILD CONFIGURATION
TARGET_SDK=34
MIN_SDK=21
COMPILE_SDK=34
BUILD_TOOLS_VERSION=34.0.0

# DEVICE DEPLOYMENT
ADB_DEVICE=192.168.1.2:42993
DEVICE_TYPE=physical

# DATABASE CONFIGURATION
DB_NAME=tams_wallet.db
DB_VERSION=1
ROOM_SCHEMA_LOCATION=schemas

# USER PROFILE DEFAULTS
DEFAULT_USER_NAME=Tamas
DEFAULT_USER_EMAIL=tamas@tamswallet.com
DEFAULT_CURRENCY=IDR
DEFAULT_LANGUAGE=id

# UI THEME CONFIGURATION
PRIMARY_COLOR=#2ECC71
SECONDARY_COLOR=#3498DB
ERROR_COLOR=#E74C3C
SUCCESS_COLOR=#27AE60
WARNING_COLOR=#F39C12
BACKGROUND_COLOR=#FAFAFA
SURFACE_COLOR=#FFFFFF
TEXT_PRIMARY=#212121
TEXT_SECONDARY=#757575

# FEATURES CONFIGURATION
ENABLE_BIOMETRIC=true
ENABLE_DARK_MODE=true
ENABLE_BACKUP=true
ENABLE_EXPORT=true
ENABLE_CHARTS=true

# DEVELOPMENT FLAGS
DEBUG_MODE=true
ENABLE_LOGGING=true
SHOW_DEBUG_INFO=false
MOCK_DATA=true

# API CONFIGURATION (FUTURE)
API_BASE_URL=https://api.tamswallet.com
API_VERSION=v1
API_TIMEOUT=30000

# ANALYTICS (FUTURE)
ENABLE_ANALYTICS=false
ANALYTICS_KEY=

# SECURITY
BIOMETRIC_TIMEOUT=300000
SESSION_TIMEOUT=1800000
AUTO_LOCK_ENABLED=true

# NOTIFICATIONS
ENABLE_TRANSACTION_NOTIFICATIONS=true
ENABLE_BUDGET_ALERTS=true
ENABLE_SAVINGS_REMINDERS=true

# BACKUP SETTINGS
AUTO_BACKUP_ENABLED=true
BACKUP_FREQUENCY=weekly
MAX_BACKUP_FILES=5

# EXPORT FORMATS
SUPPORTED_EXPORT_FORMATS=CSV,JSON,PDF
DEFAULT_EXPORT_FORMAT=CSV

# CURRENCY FORMATTING
CURRENCY_SYMBOL=Rp
CURRENCY_DECIMAL_PLACES=2
THOUSAND_SEPARATOR=.
DECIMAL_SEPARATOR=,

# DATE/TIME FORMATTING
DATE_FORMAT=dd/MM/yyyy
TIME_FORMAT=HH:mm
DATETIME_FORMAT=dd/MM/yyyy HH:mm

# LAUNCH CONFIGURATION
SPLASH_DURATION=2000
ONBOARDING_SLIDES=3
AUTO_LOGIN_ENABLED=false
REMEMBER_LOGIN=true

# PERFORMANCE SETTINGS
IMAGE_CACHE_SIZE=50MB
DATABASE_CACHE_SIZE=10MB
ANIMATION_DURATION=300

# DEVELOPMENT TOOLS
ENABLE_LAYOUT_INSPECTOR=true
ENABLE_MEMORY_PROFILER=true
ENABLE_NETWORK_PROFILER=false